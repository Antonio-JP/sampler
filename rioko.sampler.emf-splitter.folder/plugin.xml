<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="rioko.drawmodels.diagrams">
      <diagram
            compose="rioko.sampler.emf_splitter.folder.diagram.ComposeFolderDiagramNode"
            diagram="rioko.sampler.emf_splitter.folder.FolderModelDiagram"
            edge="rioko.sampler.emf_splitter.folder.diagram.FolderDiagramEdge"
            id="rioko.sampler.emf-splitter.folder.folderDiagram"
            name="Folder Model Diagram"
            node="rioko.sampler.emf_splitter.folder.diagram.FolderDiagramNode"
            parser="rioko.sampler.emf_splitter.folder.diagram.FolderIdParser"
            proxy="rioko.sampler.emf_splitter.folder.diagram.FolderProxyDiagramNode"
            reader="rioko.sampler.emf_splitter.folder.reader.FolderReader">
         <fileExtension
               fileExtension="fileExtension">
         </fileExtension>
      </diagram>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="rioko.prueba.drawModels.commands.category"
            description="Open a SAMPLER Editor with the visualization of the Resource selected"
            id="rioko.sampler.emf-splitter.folder.open.directory"
            name="Open SAMPLER Directory">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="rioko.sampler.emf_splitter.folder.handler.OpenDirectoryVisualization"
            commandId="rioko.sampler.emf-splitter.folder.open.directory">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=rioko.drawModels.menus.extensions.openFile">
         <command
               commandId="rioko.sampler.emf-splitter.folder.open.directory"
               id="rioko.drawModels.menus.extensions.open.directory"
               mnemonic="D"
               style="push">
          	   <visibleWhen>
					<with variable="activeMenuSelection">
						<iterate ifEmpty="false">
							<adapt type="org.eclipse.core.resources.IResource">
								<test property="org.eclipse.core.resources.name" value="*" />
							</adapt>
						</iterate>
					</with>
	        	</visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
