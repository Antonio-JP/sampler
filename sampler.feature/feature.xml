      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.emf.ecore.xmi"/>
      <import plugin="org.eclipse.epsilon.emc.emf" version="1.2.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.zest.core" version="1.5.100" match="greaterOrEqual"/>
      <import plugin="rioko.graphabstraction"/>
      <import plugin="rioko.plugin.utils"/>
   </requires>

   <plugin
         id="rioko.drawmodels"
         download-size="0"
         install-size="0"
